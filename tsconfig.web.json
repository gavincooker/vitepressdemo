{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "jsx": "preserve",
    "lib": ["ESNext", "Dom"],
    "types": ["unplugin-vue-define-options"],
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@packages/*": ["./packages/*"]
    }
  },
  "include": ["packages/*"],
  "exclude": ["node_modules", "dist", "*.js", "lib", "build"]
}
