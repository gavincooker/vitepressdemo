{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "jsx": "preserve",
    "lib": ["ESNext", "Dom"],
    "types": ["unplugin-vue-define-options"],
    "skipLibCheck": true
  },
  "include": ["packages","packages/**/*.ts", "packages/**/*.d.ts", "packages/**/*.tsx", "packages/**/*.vue", "typings/env.d.ts"],

  "exclude": ["node_modules", "dist", "*.js", "lib", "build"]
}
